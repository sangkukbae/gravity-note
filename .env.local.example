# Environment variables for local development
# Copy this file to .env.local and fill in your values

# Next.js
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Production Override (Set in Vercel Environment Variables)
# NEXT_PUBLIC_BASE_URL=https://gravity-note.vercel.app

# Supabase (to be configured in next phase)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Analytics (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=https://462bc90d0bfb09b20f14f996d594562f@o4509826120876032.ingest.us.sentry.io/4509955979083776
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=gravity-note
SENTRY_AUTH_TOKEN=your-sentry-auth-token
# Optional: enable verbose Sentry SDK logs (client/server). Default: disabled
# Set to 'true' only when you need to debug Sentry itself.
NEXT_PUBLIC_SENTRY_DEBUG=false
SENTRY_DEBUG=false

# Feature flags (for development)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_OFFLINE_ENABLED=true
NEXT_PUBLIC_SENTRY_REPLAY=true
NEXT_PUBLIC_SENTRY_PROFILING=true
NEXT_PUBLIC_SENTRY_TRACING=true

# Development settings
# Note: Do NOT set NODE_ENV here; Next.js sets it automatically.

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_test_key_placeholder
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_POSTHOG_ENVIRONMENT=development
